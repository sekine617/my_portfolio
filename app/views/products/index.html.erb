  <div class="row">
  <div class="col-md-3 py-5">
  <div class="card" style="width: 15rem;">
    <div class="card-header">
    カテゴリー
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Cras justo odio</li>
    <li class="list-group-item">Dapibus ac facilisis in</li>
    <li class="list-group-item">Vestibulum at eros</li>
  </ul>
</div>
  </div>
  
   <div class="col-md-9">
  <div class="album py-5">
      <div class="row">
              <% @products.each do |product| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
          <div class="product-img">
             <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="<%= "#{product.image}" %>" >
             <div class="like-btn" id="like-btn-<%= product.id %>">
                <%= render 'likes/like', product: product %>
              </div>
          </div>
            <div class="card-body">
             <h5 class="card-title"><%= product.name %></h5>
              <div class="star-rating mb-2">
                <div class="star-rating-front" style="width: <%= product.review_score_percentage %>%">★★★★★</div>
                <div class="star-rating-back">★★★★★</div>
              </div>
              <div class="ml-3 pt-2">
               <%= product.reviews.count %>件
              </div>
              <div class="d-flex justify-content-between align-items-center">
                <h6 class="card-title">¥<%= product.price %>(税込み)</h6>
              </div>
              <div class="text-right">
              <%= link_to "詳細", product,class: 'card-link ' %>
              </div>
            </div>
          </div>
        </div>
        <% end %>
      </div>
  </div>
  <%= paginate @products %>
  </div>
  </div>










