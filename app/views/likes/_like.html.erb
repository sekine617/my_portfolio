<% if product.liked_by?(@current_user) %>
   <%= link_to(product_add_path(product), method: :delete, remote: true, id: :"like-button-#{product.id}") do %>
       <i class="fa-lg fas fa-heart icon-btn liked"></i>
   <% end %>
<% else %>
   <%= link_to(product_add_path(product), method: :product, remote: true, id: :"like-button-#{product.id}") do %>
       <i class="fa-lg fas fa-heart icon-btn not-like"></i>
   <% end %>
<% end %>